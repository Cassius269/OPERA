{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Contactez-nous</h1>
    <p>Nous serons ravis de répondre à vos questions ou de recevoir vos feedbacks.</p>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}
        {{ form_row(form.send) }}
    {{ form_end(form) }}
</div>
{% endblock %}
