{% extends 'base.html.twig' %}

{% block title %}TypeInterview index{% endblock %}

{% block body %}
    <h1>TypeInterview index</h1>
    <a href="{{ path('app_type_interview_new') }}" class="btn btn-success">Create new TypeInterview</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_interview in type_interviews %}
            <tr>
                <td>{{ type_interview.id }}</td>
                <td>{{ type_interview.name }}</td>
                <td>{{ type_interview.description }}</td>
                <td>
                    <a href="{{ path('app_type_interview_show', {'id': type_interview.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_type_interview_edit', {'id': type_interview.id}) }}" class="btn btn-primary">Edit</a>
                    {{ include('type_interview/_delete_form.html.twig', {'id': type_interview.id}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
