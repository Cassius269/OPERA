{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.description, {
                'label': 'Objectif',
                'attr': {'class': 'form-control', 'placeholder': 'Décrivez l\'objectif...'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.deadline, {
                'label': 'Date d\'échéance',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            {{ form_row(form.status, {
                'label': 'Statut',
                'attr': {'class': 'form-select'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.priority, {
                'label': 'Priorité',
                'attr': {'class': 'form-select'}
            }) }}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            {{ form_row(form.personal, {
                'label': 'Collaborateur',
                'attr': {'class': 'form-select'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.category, {
                'label': 'Catégorie',
                'attr': {'class': 'form-select'}
            }) }}
        </div>
    </div>

    {{ form_row(form._token) }}

    <div class="row mt-4">
        <div class="col-md-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
</div>

{{ form_end(form) }}
