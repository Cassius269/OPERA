{% extends 'base.html.twig' %}

{% block title %}Action index{% endblock %}

{% block body %}
    <h1>Action index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Due_date</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for action in actions %}
            <tr>
                <td>{{ action.id }}</td>
                <td>{{ action.description }}</td>
                <td>{{ action.priority }}</td>
                <td>{{ action.status }}</td>
                <td>{{ action.createdAt ? action.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ action.updatedAt ? action.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ action.dueDate ? action.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ action.name }}</td>
                <td>
                    <a href="{{ path('app_action_show', {'id': action.id}) }}">show</a>
                    <a href="{{ path('app_action_edit', {'id': action.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_action_new') }}">Create new</a>
{% endblock %}
