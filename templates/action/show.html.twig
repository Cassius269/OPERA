{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
    <h1>Action</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ action.description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ action.priority }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ action.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ action.createdAt ? action.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ action.updatedAt ? action.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Due_date</th>
                <td>{{ action.dueDate ? action.dueDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ action.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_action_index') }}">back to list</a>

    <a href="{{ path('app_action_edit', {'id': action.id}) }}">edit</a>

    {{ include('action/_delete_form.html.twig') }}
{% endblock %}
