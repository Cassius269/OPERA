{% extends 'base.html.twig' %}

{% block title %}Gestion des Personnels{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des Personnels</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for personal in personals %}
            <tr>
                <td>{{ personal.id }}</td>
                <td>{{ personal.name }}</td>
                <td>{{ personal.email }}</td>
                <td>
                    <a href="{{ path('admin_personal_edit', {'id': personal.id}) }}" class="btn btn-primary">Éditer</a>
                    <a href="{{ path('admin_personal_delete', {'id': personal.id}) }}" class="btn btn-danger" onclick="return confirm('Confirmez-vous la suppression de cet utilisateur ?');">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Aucun personnel trouvé.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_personal_new') }}" class="btn btn-success">Ajouter un nouveau personnel</a>
</div>
{% endblock %}
