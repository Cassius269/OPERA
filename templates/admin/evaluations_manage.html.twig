{% extends 'base.html.twig' %}

{% block title %}Gestion des Évaluations{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des Évaluations</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Collaborateur</th>
                <th>Contenu de l'évaluation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for evaluation in evaluations %}
            <tr>
                <td>{{ evaluation.id }}</td>
                <td>{{ evaluation.collaborator }}</td>
                <td>{{ evaluation.content }}</td>
                <td>
                    <a href="{{ path('admin_evaluation_edit', {'id': evaluation.id}) }}" class="btn btn-primary">Éditer</a>
                    <a href="{{ path('admin_evaluation_view', {'id': evaluation.id}) }}" class="btn btn-secondary">Voir</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Aucune évaluation trouvée.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_evaluation_new') }}" class="btn btn-success">Ajouter une évaluation</a>
</div>
{% endblock %}
