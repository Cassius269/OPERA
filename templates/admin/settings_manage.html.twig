{% extends 'base.html.twig' %}

{% block title %}Gestion des Paramètres{% endblock %}

{% block body %}
<div class="container">
    <h2>Configuration des Paramètres de l'Application</h2>
    <form method="post" action="{{ path('admin_settings_save') }}">
        <div class="form-group">
            <label for="email_support">Email de Support</label>
            <input type="email" id="email_support" name="email_support" class="form-control" value="{{ settings.emailSupport }}" placeholder="Email pour le support client">
        </div>
        <div class="form-group">
            <label for="maintenance_mode">Mode Maintenance</label>
            <select id="maintenance_mode" name="maintenance_mode" class="form-control">
                <option value="0" {% if not settings.maintenanceMode %}selected{% endif %}>Désactivé</option>
                <option value="1" {% if settings.maintenanceMode %}selected{% endif %}>Activé</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Sauvegarder les Modifications</button>
    </form>
    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-3">Retour au tableau de bord</a>
</div>
{% endblock %}
