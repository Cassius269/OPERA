{% extends 'base.html.twig' %}

{% block title %}Aperçu des Équipes{% endblock %}

{% block body %}
<div class="container">
    <h1>Aperçu des Équipes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom de l'équipe</th>
                <th>Membres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.members|length }}</td>
                <td>
                    <a href="{{ path('admin_team_edit', {'id': team.id}) }}" class="btn btn-primary">Éditer</a>
                    <a href="{{ path('admin_team_delete', {'id': team.id}) }}" class="btn btn-danger" onclick="return confirm('Confirmez-vous la suppression de cette équipe ?');">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Aucune équipe trouvée.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_team_new') }}" class="btn btn-success">Créer une nouvelle équipe</a>
</div>
{% endblock %}
