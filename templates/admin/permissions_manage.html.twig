{% extends 'base.html.twig' %}

{% block title %}Gestion des Permissions{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des Permissions</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Permissions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.roles | join(', ') }}</td>
                <td>
                    <a href="{{ path('admin_permissions_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">Aucun utilisateur trouv√©.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
