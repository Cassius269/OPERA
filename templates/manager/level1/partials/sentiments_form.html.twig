{% extends 'base.html.twig' %}

{% block title %}Création/Édition des Sentiments des Employés{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ is_edit ? 'Éditer' : 'Créer' }} un Sentiment</h1>
    <form action="{{ path('manager_level1_save_sentiment', {'id': sentiment_id}) }}" method="post">
        <div class="form-group">
            <label for="sentiment_value">Valeur du sentiment:</label>
            <input type="text" id="sentiment_value" name="sentiment[value]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="sentiment_description">Description:</label>
            <textarea id="sentiment_description" name="sentiment[description]" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label for="sentiment_date">Date:</label>
            <input type="date" id="sentiment_date" name="sentiment[date]" class="form-control" required>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">{{ is_edit ? 'Mettre à jour' : 'Créer' }}</button>
        </div>
    </form>
</div>
{% endblock %}
