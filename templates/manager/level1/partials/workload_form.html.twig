{% extends 'base.html.twig' %}

{% block title %}Création/Édition de la Charge de Travail{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ is_edit ? 'Éditer' : 'Créer' }} une Charge de Travail</h1>
    <form action="{{ path('manager_level1_save_workload', {'id': workload_id}) }}" method="post">
        <div class="form-group">
            <label for="workload_level">Niveau de charge de travail:</label>
            <input type="text" id="workload_level" name="workload[level]" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="workload_description">Description:</label>
            <textarea id="workload_description" name="workload[description]" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label for="workload_date">Date:</label>
            <input type="date" id="workload_date" name="workload[date]" class="form-control" required>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">{{ is_edit ? 'Mettre à jour' : 'Créer' }}</button>
        </div>
    </form>
</div>
{% endblock %}
