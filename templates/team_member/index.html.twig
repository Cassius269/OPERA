{% extends 'base.html.twig' %}

{% block title %}Team Members{% endblock %}

{% block body %}
<h1>Team Members</h1>
<a href="{{ path('team_member_new') }}" class="btn btn-primary">Add New Team Member</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for member in team_members %}
        <tr>
            <td>{{ member.id }}</td>
            <td>{{ member.name }}</td>
            <td>{{ member.roleInTeam }}</td>
            <td>{{ member.status }}</td>
            <td>
                <a href="{{ path('team_member_show', {'id': member.id}) }}" class="btn btn-info">View</a>
                <a href="{{ path('team_member_edit', {'id': member.id}) }}" class="btn btn-success">Edit</a>
                <form action="{{ path('team_member_delete', {'id': member.id}) }}" method="post" onsubmit="return confirm('Are you sure?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">No team members found.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
