{% extends 'base.html.twig' %}

{% block title %}TeamMember{% endblock %}

{% block body %}
    <h1>Liste des membre de l'équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team_member.id }}</td>
            </tr>
            <tr>
                <th>Role_in_team</th>
                <td>{{ team_member.roleInTeam }}</td>
            </tr>
            <tr>
                <th>Joined_at</th>
                <td>{{ team_member.joinedAt ? team_member.joinedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ team_member.status }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team_member.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team_member.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_member_index') }}">retour</a>
    <a href="{{ path('app_team_member_show', {'id': team_member.id}) }}">Voir</a>
    <a href="{{ path('app_team_member_edit', {'id': team_member.id}) }}">Éditer</a>
    <a href="{{ path('app_team_member_delete', {'id': team_member.id}) }}">Supprimer</a>

    {{ include('team_member/_delete_form.html.twig') }}
