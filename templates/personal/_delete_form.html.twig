<form method="post" action="{{ path('app_personal_delete', {'id': personal.id}) }}" onsubmit="return confirmDeletion();">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personal.id) }}">
    <button class="btn btn-danger" type="submit">Supprimer</button>
</form>

<script>
function confirmDeletion() {
    return confirm('Are you sure you want to delete this record? This action cannot be undone.');
}
</script>
