{# J'étends le layout de base pour maintenir une cohérence visuelle à travers l'application. #}
{% extends 'base.html.twig' %}

{% block title %}Index des Profils{% endblock %}

{% block body %}
    <h1>Index des Profils</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Position</th>
                <th>Date de naissance</th>
                <th>Photo de profil</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.username }}</td>
                <td>{{ profile.firstname }}</td>
                <td>{{ profile.lastname }}</td>
                <td>{{ profile.position }}</td>
                <td>{{ profile.birthdate ? profile.birthdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ profile.profilePicture }}</td>
                <td>
                    <a href="{{ path('app_profile_show', {'id': profile.id}) }}">Voir</a>
                    <a href="{{ path('app_profile_edit', {'id': profile.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun profil trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profile_new') }}">Créer un nouveau profil</a>
{% endblock %}
