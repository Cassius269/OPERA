{# templates/components/help_widget.twig #}
<div class="help-widget">
    <h3>Documents d'Aide</h3>
    {# Vérification de la présence de documents #}
    {% if documents|length > 0 %}
        <ul>
            {# Génération d'une liste de liens vers les documents #}
            {% for document in documents %}
                <li>
                    <a href="{{ path('help_view', {'id': document.id}) }}" aria-label="Voir le document d'aide {{ document.title }}">
                        {{ document.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {# Message affiché en l'absence de documents #}
        <p>Aucun document d'aide disponible pour le moment.</p>
    {% endif %}
</div>
