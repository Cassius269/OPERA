{# templates/components/resources_link.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Ressources{% endblock %}

{% block body %}
    <h1>Je liste les ressources disponibles</h1>
    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_link in resource_links %}
            <tr>
                <td>{{ resource_link.title }}</td>
                <td>{{ resource_link.description }}</td>
                <td><a href="{{ resource_link.url }}">{{ resource_link.url }}</a></td>
                <td>
                    <a href="{{ path('resource_link_edit', {'id': resource_link.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune ressource trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Je crée une nouvelle ressource</h2>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
