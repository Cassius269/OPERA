{% extends 'base.html.twig' %}

{% block title %}Vérification de l'Email{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">Vérification de l'Email</div>
                <div class="card-body">
                    <p class="text-muted">Veuillez entrer votre adresse email pour continuer.</p>
                    <form action="{{ path('check_email_submit') }}" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Adresse Email</label>
                            <input type="email" id="email" name="email" required class="form-control" placeholder="email@example.com">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Soumettre</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
