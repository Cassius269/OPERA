{% extends 'base.html.twig' %}

{% block title %}Changement de Mot de Passe
{% endblock %}
{% block body %}
	<style>

		#form {
			width: 450px;
			margin: auto;
			padding: 1rem 1rem 1rem 1.5rem;
			display: grid;
			grid-template-columns: 150px;
			row-gap: 1rem;
			gap: 1rem;
			border: 1px solid #ecd6d6;
		}

		button[type="submit"] {
			background: #f2f1f1;

			background: #0d6efd;
			color: white;
			padding: 0.5rem 0.5rem 1rem;
			border-radius: 8px;
		}

		h1 {
			text-align: center;
			margin-bottom: 4rem;
		}

		h2 {
			font-size: 14px;
			border: 1.5px solid #f2f1f1;
			width: 452px;
			margin: auto;
			text-align: center;
			border-bottom: none;
			padding: 1rem 0;
		}

		div {
			margin-bottom: 2rem;
		}


		li {
			color: red;
		}
	</style>
	<h1>Modification du mot de passe</h1>
	<div>
		<h2>Veuillez changer votre mot de passe</h2>
		{{form(form)}}
		</div>
	{% endblock %}
