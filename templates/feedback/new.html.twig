{# J'utilise le layout de base pour cette vue et je prépare un formulaire pour la création d'un nouveau feedback. Une fois le formulaire soumis, l'utilisateur est redirigé vers la liste des feedbacks. #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau Feedback{% endblock %}

{% block body %}
    <h1>Créer un nouveau Feedback</h1>

    {{ include('feedback/_form.html.twig', {'form': form, 'button_label': 'Créer'}) }}

    <a href="{{ path('app_feedback_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
