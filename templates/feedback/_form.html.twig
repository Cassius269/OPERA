{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

<div class="container mt-4">
    <div class="row mt-3">
        <div class="col-md-6">
            {{ form_row(form.date, {
                'label': 'Date du feedback',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.type, {
                'label': 'Type de feedback',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
    </div>
    {# <div class="row mt-3">
        <div class="col-md-12">
            {{ form_row(form.interview, {
                'label': 'Entretien associ√©',
                'attr': {'class': 'form-select'}
            }) }}
        </div>
    </div> #}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.feedback_text, {
                'label': 'Texte du feedback',
                'attr': {'class': 'form-control', 'placeholder': 'Entrez votre feedback ici', 'rows': 4}
            }) }}
        </div>
    </div>
    {{form_row(form._token)}}
    <div class="row mt-4">
        <div class="col-md-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
</div>

{{ form_end(form, {render_rest: false}) }}
